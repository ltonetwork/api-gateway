{
  "name": "lto-api-gateway",
  "version": "0.1.0",
  "description": "LTO Network - API Gateway",
  "author": "Sven Stam",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "build": "rm -rf dist && tsc && npm run postbuild",
    "postbuild": "cp -r src/config/data dist/config",
    "prestart:prod": "rm -rf dist && tsc && npm run postbuild",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --detectOpenHandles --forceExit --coverage",
    "test:e2e": "jest --detectOpenHandles --forceExit --runInBand --config ./test/jest-e2e.json",
    "test:all": "npm run test:e2e && npm run test:cov",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^6.1.1",
    "@nestjs/core": "^6.1.1",
    "@nestjs/platform-express": "^6.1.1",
    "bluebird": "^3.5.4",
    "convict": "^4.4.1",
    "cors": "^2.8.5",
    "event-stream": "^4.0.1",
    "express": "^4.16.4",
    "helmet": "^3.16.0",
    "http-proxy": "^1.18.1",
    "lto-api": "^0.5.11",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.1",
    "typescript": "^3.4.5",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.8.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.1.1",
    "@types/bluebird": "^3.5.26",
    "@types/express": "^4.16.1",
    "@types/http-proxy": "^1.17.0",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.7",
    "@types/supertest": "^2.0.7",
    "jest": "^24.7.1",
    "node-mocks-http": "^1.7.3",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.4.3",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "5.16.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
